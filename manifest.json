{
  "name": "Fullscreen mode for Google Tasks widget",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "32": "/icons/icon32.png",
    "128": "/icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://tasks.google.com/embed/*"
      ],
      "all_frames": true,
      "js": [
        "/scripts/dom_utils.js",
        "/scripts/wait_and_execute_helper.js",
        "content_script.js"
      ]
    }
  ]
}